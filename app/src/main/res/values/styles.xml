<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#131313</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/primaryColorAccent</item>

    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorControlNormal">@android:color/background_light</item>
    </style>

    <style name="DetailedActivityToolBarStyle" parent="ToolbarTheme">
        <item name="android:background">@android:drawable/screen_background_dark_transparent</item>

    </style>

    <style name="MainActivityToolBarStyle" parent="ToolbarTheme">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextStyle">
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintHorizontal_bias">0.0</item>
    </style>

    <style name="InfoTextStyle" parent="TextStyle">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/neusa_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="InfoImageStyle">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">17dp</item>
        <item name="android:layout_marginStart">8dp </item>
        <item name="android:layout_marginTop">8dp </item>
        <item name="android:layout_marginBottom">8dp </item>
        <item name="layout_constraintHorizontal_bias">0.0</item>

    </style>
    <style name="connectionErrorTextStyle" parent="TextStyle">
        <item name="android:textColor">@color/primaryTextColor</item>

        <item name="android:fontFamily">@font/neusa_semibold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="tryAgainTextStyle" parent="TextStyle">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/neusa_medium</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>
